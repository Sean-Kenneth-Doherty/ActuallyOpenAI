# ActuallyOpenAI Configuration

# =============================================================================
# Server Configuration
# =============================================================================
ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_PORT=8000
ORCHESTRATOR_WORKERS=4
DEBUG=false

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/actuallyopenai
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Blockchain / Crypto Configuration
# =============================================================================
# Network: mainnet, goerli, sepolia, polygon, arbitrum
BLOCKCHAIN_NETWORK=sepolia
BLOCKCHAIN_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Token Contract Address (deployed AOAI token)
TOKEN_CONTRACT_ADDRESS=0x...

# Treasury wallet for dividend distribution
TREASURY_PRIVATE_KEY=your_treasury_private_key_here
TREASURY_ADDRESS=0x...

# Minimum payout threshold (in AOAI tokens)
MIN_PAYOUT_THRESHOLD=10.0

# Payout frequency (in hours)
PAYOUT_FREQUENCY_HOURS=24

# =============================================================================
# Worker Configuration
# =============================================================================
# Your wallet address to receive AOAI tokens
WORKER_WALLET_ADDRESS=0x...

# Worker identification
WORKER_NAME=my-worker-node
WORKER_REGION=us-east

# Compute limits
MAX_GPU_MEMORY_GB=8
MAX_CPU_CORES=4
MAX_RAM_GB=16

# =============================================================================
# Security
# =============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Keys for model access
API_KEY_SALT=random-salt-for-api-keys

# =============================================================================
# IPFS Configuration (Decentralized Storage)
# =============================================================================
IPFS_HOST=127.0.0.1
IPFS_PORT=5001
IPFS_GATEWAY=https://ipfs.io/ipfs/

# =============================================================================
# Training Configuration
# =============================================================================
# Default batch size for distributed training
DEFAULT_BATCH_SIZE=32

# Gradient accumulation steps
GRADIENT_ACCUMULATION_STEPS=4

# Model checkpoint frequency (in steps)
CHECKPOINT_FREQUENCY=1000

# =============================================================================
# Monitoring
# =============================================================================
PROMETHEUS_PORT=9090
ENABLE_METRICS=true
LOG_LEVEL=INFO
